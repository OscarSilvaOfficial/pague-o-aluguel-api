{
  "name": "pague-o-aluguel-api",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "generate-data": "ts-node-dev -r tsconfig-paths/register scripts/db/generate-data.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integrations",
    "test:integration:useCases": "jest --testPathPattern=tests/integrations/core/useCases",
    "test:all": "jest",
    "prisma-generate": "npx prisma generate --schema ./schema.prisma",
    "prisma-migrate-dev": "npx prisma migrate dev",
    "prisma-migrate-prod": "npx prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/swagger": "^5.2.1",
    "@prisma/client": "^3.13.0",
    "axios": "^0.26.1",
    "dotenv": "^16.0.0",
    "express": "4",
    "express-decorators": "^1.2.1",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node-dev": "1.8.0",
    "tsc-alias": "^1.6.6",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
